.pagination
    text-align center
    position   absolute
    width      100%
    bottom     -35px
    left       0

    > *
        display         inline-block
        margin          0 2px
        padding         0 5px
        min-width       16px
        text-align      center
        text-decoration none

    a:hover
        text-decoration underline

    .space
        color $grey-color

    .prev
        position absolute
        left 0

    .next
        position absolute
        right 0

    .current
        position relative
        color $grey-color

        $size = $ui-active-dot-size
        &:before
        &:after
            content       ''
            position      absolute
            size          $size
            border-radius 100%
            left          50%
            top           ceil(- $size/2 - 8)
            margin-left   round(- $size/2)
            background    $base-bg-color
            box-shadow    inset $base-box-shadow

        &:after
            $size            = ceil($size/2+1)
            size             $size
            top              ceil(- $size/2 - 8)
            margin-left      round(- $size/2)
            background-color #FFF
            box-shadow       $base-box-shadow
