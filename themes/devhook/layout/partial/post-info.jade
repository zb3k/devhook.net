a(href=post.permalink+'#comments' data-disqus-identifier=post.slug).btn.accent-dark.disqus-comment-count 0

//- a.btn.accent DEV

if post.categories.length
    .btn-group
        each cat,index in post.categories.data
            a(href=cat.permalink class="btn accent"+(index||post.categories.data.length===1?'-light':''))= cat.name

span.btn.light= date(post.date)